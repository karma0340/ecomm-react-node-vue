
{{!-- This file renders the admin login form and mounts the Vue component --}}



<div id="vue-admin-login"></div>

<script>
  // Pass any server-side error into Vue via a global variable
  window.__LOGIN_ERROR__ = {{{json error}}};
</script>

{{!-- Dynamically load the built Vue assets using the Vite manifest --}}
{{#with (lookup viteManifest "src/vue-adminLogin.js") as |bundle|}}
  {{#if bundle.css}}
    {{#each bundle.css}}
      <link rel="stylesheet" href="/dist/{{this}}">
    {{/each}}
  {{/if}}
  <script type="module" src="/dist/{{bundle.file}}"></script>
{{/with}}


