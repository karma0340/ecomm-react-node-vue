<script>
  window.__INITIAL_STATS__ = {{{json stats}}};
</script>
{{/if}}

{{!-- Include the Vue dashboard bundle (built by Vite, served from /js/) --}}
<script src="/js/vue-dashboard.bundle.js"></script>
