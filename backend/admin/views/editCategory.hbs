<h2 class="mb-4 fw-bold text-primary">
  <i class="bi bi-pencil-square"></i> Edit Category
</h2>

<div class="card shadow-sm mx-auto" style="max-width: 480px;">
  <div class="card-body">
    <form action="/categories/{{category.id}}/edit" method="POST" autocomplete="off">
      <div class="mb-3">
        <label for="categoryName" class="form-label">Category Name</label>
        <input name="name" id="categoryName" class="form-control" value="{{category.name}}" required>
      </div>
      <div class="mb-3">
        <label for="categoryImage" class="form-label">Image URL</label>
        <input name="imageUrl" id="categoryImage" class="form-control" value="{{category.imageUrl}}">
        {{#if category.imageUrl}}
          <div class="mt-2">
            <img src="{{category.imageUrl}}" alt="{{category.name}}" style="width:80px; border-radius:8px; border:1px solid #eee;">
          </div>
        {{/if}}
      </div>
      <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary shadow-sm">
          <i class="bi bi-save"></i> Save Changes
        </button>
        <a href="/categories" class="btn btn-secondary">
          <i class="bi bi-arrow-left"></i> Cancel
        </a>
      </div>
    </form>
  </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
