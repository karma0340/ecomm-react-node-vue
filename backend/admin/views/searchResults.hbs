<!-- Add Bootstrap CSS if not already included in your layout -->
<style>
/* Fade-in animation for result cards */
@keyframes fadeInUp {
  from { opacity: 0; transform: translateY(30px);}
  to { opacity: 1; transform: translateY(0);}
}
.result-card {
  animation: fadeInUp 0.7s cubic-bezier(.77,0,.18,1);
  transition: box-shadow 0.2s;
}
.result-card:hover {
  box-shadow: 0 0.5rem 1.5rem rgba(88,86,214,0.15);
  transform: translateY(-2px) scale(1.02);
}
</style>

<h2 class="mb-4 text-primary fw-bold">Search Results for "<span class="text-dark">{{query}}</span>"</h2>

{{#if (or results.users.length results.products.length)}}
  <div class="row g-4">
    {{#if results.users.length}}
      <div class="col-12">
        <h4 class="text-success mb-3">Users</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
          {{#each results.users}}
            <div class="col">
              <div class="card result-card shadow-sm border-0">
                <div class="card-body d-flex align-items-center">
                  <div class="avatar avatar-md bg-primary text-white fw-bold me-3" style="font-size:1.5rem;">
                    {{name.[0]}}
                  </div>
                  <div>
                    <div class="fw-semibold fs-5">{{name}}</div>
                    <div class="text-muted small">{{email}}</div>
                  </div>
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
    {{#if results.products.length}}
      <div class="col-12 mt-4">
        <h4 class="text-info mb-3">Products</h4>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3">
          {{#each results.products}}
            <div class="col">
              <div class="card result-card shadow-sm border-0">
                <div class="card-body">
                  <div class="fw-semibold fs-5 mb-1">{{name}}</div>
                  {{#if price}}
                    <div class="text-muted mb-2">â‚¹{{price}}</div>
                  {{/if}}
                  {{#if imageUrl}}
                    <img src="{{imageUrl}}" alt="{{name}}" class="img-fluid rounded" style="max-height:120px;">
                  {{/if}}
                  {{!-- Add more product info here if needed --}}
                </div>
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    {{/if}}
  </div>
{{else}}
  <div class="alert alert-warning mt-4 shadow-sm fade show animate__animated animate__fadeIn">
    <i class="icon cil-search me-2"></i>
    <span>No results found for "<strong>{{query}}</strong>".</span>
  </div>
{{/if}}

<!-- Optional: Animate on page load -->
<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('.result-card').forEach(function(card, i) {
    card.style.animationDelay = (i * 0.07) + 's';
  });
});
</script>
